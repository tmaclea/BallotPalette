@page
@model BallotPalette.Pages.BallotsModel
@{
    ViewData["Title"] = "Ballots";
}

<h1>Ballots</h1>

@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control"
                   asp-for="SearchTerm" />
            <span class="input-group-btn">
                <button class="btn btn-default">
                    <i class="icono-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">

    @foreach (var ballot in Model.Ballots)
    {
        <tr>
            <td>@ballot.Id</td>
            <td>@ballot.Name</td>
            <td>
                <a class="btn btn-lg" asp-page="./Detail" asp-route-ballotId="@ballot.Id">
                    <i class="icono-eye"></i>
                </a>
            </td>
            <td>
                <a class="btn btn-lg" asp-page="./Edit" asp-route-ballotId="@ballot.Id">
                    <i class="icono-rename"></i>
                </a>
            </td>
            <td>
                <a class="btn btn-lg" asp-page="./Results" asp-route-ballotId="@ballot.Id">
                    <i class="icono-barChart"></i>
                </a>
            </td>
        </tr>
    }
</table>

