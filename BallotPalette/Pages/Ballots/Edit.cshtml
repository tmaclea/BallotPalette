@page "{BallotId:int?}"
@model BallotPalette.Pages.Ballots.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Editing @Model.Ballot.Name</h1>

<form method="post">
    <input type="hidden" asp-for="Ballot.Id" />
    <div class="form-group">
        <label asp-for="Ballot.Name"></label>
        <input asp-for="Ballot.Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Ballot.Name"></span>
    </div>
    <div id="q_container" class="row mb-5">
        <div class="col-md-4 order-md-1">
            <div class="mb-3">
                <input class="form-control" asp-for="Questions_text[0]" placeholder="Question" />
                <input class="form-control" placeholder="Option 1" asp-for="Q1_Options[0]" />
                <input class="form-control" placeholder="Option 2" asp-for="Q1_Options[1]" />
                <input class="form-control" placeholder="Option 3 (Optional)" asp-for="Q1_Options[2]" />
                <input class="form-control" placeholder="Option 4 (Optional)" asp-for="Q1_Options[3]" />
                <input class="form-control" placeholder="Option 5 (Optional)" asp-for="Q1_Options[4]" />
                <input class="form-control" placeholder="Option 6 (Optional)" asp-for="Q1_Options[5]" />
            </div>
        </div>

        <div class="col-md-4 order-md-1">
            <div class="mb-3">
                <input class="form-control" asp-for="Questions_text[1]" placeholder="Question" />
                <input class="form-control" placeholder="Option 1" asp-for="Q2_Options[0]" />
                <input class="form-control" placeholder="Option 2" asp-for="Q2_Options[1]"  />
                <input class="form-control" placeholder="Option 3 (Optional)" asp-for="Q2_Options[2]"  />
                <input class="form-control" placeholder="Option 4 (Optional)" asp-for="Q2_Options[3]"  />
                <input class="form-control" placeholder="Option 5 (Optional)" asp-for="Q2_Options[4]"  />
                <input class="form-control" placeholder="Option 6 (Optional)" asp-for="Q2_Options[5]"  />
            </div>
        </div>

        <div class="col-md-4 order-md-1">
            <div class="mb-3">
                <input class="form-control" asp-for="Questions_text[2]" placeholder="Question" />
                <input class="form-control" placeholder="Option 1" asp-for="Q3_Options[0]"  />
                <input class="form-control" placeholder="Option 2" asp-for="Q3_Options[1]" />
                <input class="form-control" placeholder="Option 3 (Optional)" asp-for="Q3_Options[2]" />
                <input class="form-control" placeholder="Option 4 (Optional)" asp-for="Q3_Options[3]" />
                <input class="form-control" placeholder="Option 5 (Optional)" asp-for="Q3_Options[4]" />
                <input class="form-control" placeholder="Option 6 (Optional)" asp-for="Q3_Options[5]" />
            </div>
        </div>

        <div class="col-md-4 order-md-1">
            <div class="mb-3">
                <input class="form-control" asp-for="Questions_text[3]" placeholder="Question" />
                <input class="form-control" placeholder="Option 1" asp-for="Q4_Options[0]" />
                <input class="form-control" placeholder="Option 2" asp-for="Q4_Options[1]" />
                <input class="form-control" placeholder="Option 3 (Optional)" asp-for="Q4_Options[2]" />
                <input class="form-control" placeholder="Option 4 (Optional)" asp-for="Q4_Options[3]"  />
                <input class="form-control" placeholder="Option 5 (Optional)" asp-for="Q4_Options[4]"  />
                <input class="form-control" placeholder="Option 6 (Optional)" asp-for="Q4_Options[5]"  />
            </div>
        </div>

        <div class="col-md-4 order-md-1">
            <div class="mb-3">
                <input class="form-control" asp-for="Questions_text[4]" placeholder="Question" />
                <input class="form-control" placeholder="Option 1" asp-for="Q5_Options[0]"  />
                <input class="form-control" placeholder="Option 2" asp-for="Q5_Options[1]" />
                <input class="form-control" placeholder="Option 3 (Optional)" asp-for="Q5_Options[2]"  />
                <input class="form-control" placeholder="Option 4 (Optional)" asp-for="Q5_Options[3]"  />
                <input class="form-control" placeholder="Option 5 (Optional)" asp-for="Q5_Options[4]"  />
                <input class="form-control" placeholder="Option 6 (Optional)" asp-for="Q5_Options[5]"  />
            </div>
        </div>

        <div class="col-md-4 order-md-1">
            <div class="mb-3">
                <input class="form-control" asp-for="Questions_text[5]" placeholder="Question" />
                <input class="form-control" placeholder="Option 1" asp-for="Q6_Options[0]"  />
                <input class="form-control" placeholder="Option 2" asp-for="Q6_Options[1]"  />
                <input class="form-control" placeholder="Option 3 (Optional)" asp-for="Q6_Options[2]"  />
                <input class="form-control" placeholder="Option 4 (Optional)" asp-for="Q6_Options[3]" />
                <input class="form-control" placeholder="Option 5 (Optional)" asp-for="Q6_Options[4]"  />
                <input class="form-control" placeholder="Option 6 (Optional)" asp-for="Q6_Options[5]"  />
            </div>
        </div>
    </div>
    <div class="row mb-5">
        <button type="submit" class="btn btn-lg btn-block btn-primary">Submit Ballot and continue</button>
    </div>
</form>